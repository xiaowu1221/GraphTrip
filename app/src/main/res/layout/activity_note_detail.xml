<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_note_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_note_detail_pic"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:transitionName="note"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:id="@+id/ll_note_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:layout_below="@+id/iv_note_detail_pic"
            android:layout_margin="8dp"
            android:orientation="vertical">
        </LinearLayout>
        <include layout="@layout/include_view_action_bar" />
    </RelativeLayout>
</ScrollView>
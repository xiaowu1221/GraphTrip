<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="216dp">
                <ImageView
                    android:id="@+id/iv_sight_detail_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:transitionName="share"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    android:layout_margin="24dp">
                    <TextView
                        android:id="@+id/tv_sight_detail_cnname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title"
                        android:textColor="@color/cyan_100"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tv_sight_detail_enname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/cyan_50"
                        android:textSize="@dimen/subhead"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layoutAnimation="@anim/login_anim_layout">

                <LinearLayout
                    android:id="@+id/ll_sight_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="查看地址和交通  >>" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sight_detail_perimeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="查看周边  >>" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sight_detail_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="折扣"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sight_detail_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="简介"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sight_detail_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="路线"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_sight_detail_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <TextView
                        style="@style/SightDetailTag"
                        android:text="小贴士"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_view_action_bar" />
</RelativeLayout>

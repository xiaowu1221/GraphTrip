<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_travel_note"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_note"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="208dp">
                <ImageView
                    android:id="@+id/iv_item_note_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerCrop"/>
                <LinearLayout
                    android:id="@+id/ll_item_note_user"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/trans_color_grey_500"
                    android:orientation="vertical"
                    android:layout_alignParentLeft="true">
                    <com.gp.wu.graphtrip.view.CircleImageView
                        android:id="@+id/civ_item_user_photo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_color="@color/cyan_100"
                        app:civ_border_width="2dp"
                        app:civ_fill_color="@color/white" />
                    <TextView
                        android:id="@+id/tv_item_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="@dimen/subhead"
                        android:layout_margin="8dp"
                        android:ellipsize="end"
                        android:ems="1"
                        android:text="行路者"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_item_note_view"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:text="231"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/blue_500"
                        android:drawableLeft="@drawable/ic_view"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:id="@+id/tv_item_note_msg"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="231"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/blue_500"
                        android:drawableLeft="@drawable/ic_msg"
                        android:drawablePadding="8dp"/>
                    <TextView
                        android:id="@+id/tv_item_note_like"
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="231"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/blue_500"
                        android:drawableLeft="@drawable/ic_like"
                        android:drawablePadding="8dp"/>

                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_item_note_text"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:maxLines="3"
                android:textSize="@dimen/body"
                android:gravity="center|left"
                android:padding="8dp"
                android:textColor="@color/grey_800"
                android:ellipsize="end"
                android:text="跟着林楚方，每天十分钟，让旅行更加有趣、有料、有逼格。欢迎关注我的微信公号“行路男”，了解更多关于旅行目的地背后的故事。在这个世界上，有个城市论魅力比巴黎还大，那就是我的家乡——天津。"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
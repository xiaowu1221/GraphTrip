<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item_perimeter_go">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:src="@drawable/ic_location"/>
            <TextView
                android:id="@+id/tv_perimeter_go_position"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="1"
                android:layout_centerHorizontal="true"
                android:textColor="@color/cyan_500"
                android:textSize="@dimen/body"
                android:layout_marginTop="2dp"
                android:gravity="center"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_perimeter_go_cnname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="星光大道  the Stars Avenue"
                    android:textColor="@color/grey_800"
                    android:textSize="@dimen/headline"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_perimeter_go_tag"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center|left">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/body"
                    android:text="景点观光排名:"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tv_perimeter_go_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.4"
                    android:textColor="@color/grey_800"
                    android:textSize="@dimen/title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textSize="@dimen/body"/>
                <TextView
                    android:id="@+id/tv_perimeter_go_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16954"
                    android:textSize="@dimen/body"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/body"
                    android:text="周边"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/tv_perimeter_go_hotel_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subhead"
                    android:textColor="@color/red_500"
                    android:text="612"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/body"
                    android:text="家酒店"
                    android:layout_marginLeft="8dp"/>
                <Button
                    android:id="@+id/btn_perimeter_go_see"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="查看"
                    android:background="@drawable/item_perimeter_go_see_bg"
                    android:textColor="@color/blue_500"
                    android:textSize="@dimen/subhead"
                    android:layout_marginLeft="16dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_500" />
</LinearLayout>
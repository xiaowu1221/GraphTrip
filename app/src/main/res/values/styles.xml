<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <!--允许使用transitions-->
        <item name="android:windowContentTransitions">true</item>
        <!--是否覆盖执行，可以理解成是否同步执行还是顺序执行-->
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cyan_50</item>
        <item name="colorPrimaryDark">@color/cyan_300</item>
        <item name="colorAccent">@color/cyan_50</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="SplashTheme" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/cyan_300</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="NoTitleBarTheme" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="LoginLlTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layoutAnimation">@anim/login_anim_layout</item>
    </style>

    <style name="LoginEdtTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textColorHint">@color/cyan_50</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:background">@drawable/login_edt_select</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="SightDetailTag">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@color/cyan_50</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/subhead</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="SightDetailPopInOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/sight_detail_address_pop_in</item>
        <item name="android:windowExitAnimation">@anim/sight_detail_address_pop_out</item>
        <item name="android:interpolator">@android:anim/decelerate_interpolator</item>
    </style>

    <style name="SettingTag">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/grey_100</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>
</resources>
